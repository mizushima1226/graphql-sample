{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "node -r ts-node/register node_modules/.bin/micro-dev ./src/index.ts",
    "dev:watch": "ts-node-dev --respawn src/index.ts",
    "clean": "rimraf dist/*",
    "tsc": "tsc -b",
    "build": "run-s clean tsc",
    "start": "node .",
    "gen": "graphql-codegen --config codegen.yml"
  },
  "dependencies": {
    "apollo-server-micro": "^2.19.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "graphql-import": "^1.0.2",
    "graphql-tools": "^7.0.2",
    "micro": "^9.3.4",
    "micro-cors": "^0.1.1",
    "microrouter": "^3.1.3",
    "mongodb": "^3.6.4"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.20.1",
    "@graphql-codegen/introspection": "1.18.1",
    "@graphql-codegen/typescript": "1.21.0",
    "@graphql-codegen/typescript-mongodb": "1.18.0",
    "@graphql-codegen/typescript-operations": "^1.17.14",
    "@graphql-codegen/typescript-resolvers": "^1.18.2",
    "@types/express": "^4.17.11",
    "@types/graphql": "^14.5.0",
    "@types/micro": "^7.3.3",
    "@types/micro-cors": "^0.1.1",
    "@types/microrouter": "^3.1.1",
    "@types/mongodb": "^3.6.6",
    "@types/node": "14",
    "graphql-toolkit": "^0.7.5",
    "micro-dev": "^3.0.0",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3",
    "yarn-run-all": "^3.1.1"
  }
}
